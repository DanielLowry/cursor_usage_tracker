/* Relative path: apps/worker/package.json */

{
  "name": "@cursor-usage/worker",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup --dts",
    "install_playwright" : "playwright install",
    "start": "tsx src/index.ts",
    "dev": "tsx --watch src/index.ts",
    "onboard": "tsx src/scripts/onboard.ts",
    "worker:scraper": "node ./dist/workers/scraper.js",
    "worker:scheduler": "node ./dist/workers/scheduler.js",
    "clean": "rimraf dist .turbo",
    "lint": "eslint .",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@cursor-usage/db": "workspace:*",
    "@cursor-usage/types": "workspace:*",
    "@cursor-usage/redis": "workspace:*",
    "bullmq": "^5.1.0",
    "playwright": "^1.42.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cursor-usage/config": "workspace:*",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "typescript": "^5.3.0"
  }
}