# This file is an example.
# Copy it to .env and fill in your actual values.
# DO NOT COMMIT .env TO VERSION CONTROL.

# --- Core ---
# Used by Prisma, must be a valid PostgreSQL connection string.
# Example: postgresql://user:password@host:port/database?schema=public
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/cursor_usage?schema=public"

# Used by BullMQ for workers and for web app caching.
# Example: redis://localhost:6379
REDIS_URL="redis://localhost:6379"

# --- Auth (NextAuth.js) ---
# A secret used to sign and encrypt tokens and cookies.
# Generate one with `npx auth secret`
AUTH_SECRET="your-super-secret-auth-secret"

# The canonical URL of your production site.
# Used for redirects and callbacks.
AUTH_URL="http://localhost:3000"

# --- SMTP (for email alerts) ---
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="user@example.com"
SMTP_PASS="your-smtp-password"
SMTP_FROM="alerts@example.com"

# --- Worker (Playwright) ---
# Path to a persistent directory for the browser profile.
# In Docker, this should be a mounted volume (e.g., /profile).
PLAYWRIGHT_USER_DATA_DIR="./data/profile"